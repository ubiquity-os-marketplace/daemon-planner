{
  "name": "@ubiquity-os/daemon-planner",
  "description": "Automated sprint planner that assigns GitHub issues based on contributor capacity.",
  "ubiquity:listeners": ["issues.opened", "issues.reopened", "issues.closed"],
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "organizations": {
        "default": ["ubiquity", "ubiquity-os", "ubiquity-os-marketplace"],
        "minItems": 1,
        "description": "List of GitHub organizations to process issues for.",
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "dailyCapacityHours": {
        "default": 6,
        "minimum": 1,
        "description": "The daily work capacity.",
        "type": "number"
      },
      "planningHorizonDays": {
        "default": 5,
        "minimum": 1,
        "type": "number"
      },
      "reviewBufferHours": {
        "default": 2,
        "minimum": 0,
        "type": "number"
      },
      "assignedTaskLimit": {
        "default": 1,
        "minimum": 1,
        "type": "number"
      },
      "dryRun": {
        "default": false,
        "description": "When enabled, planned actions are logged but no assignments are executed.",
        "type": "boolean"
      }
    }
  },
  "short_name": "ubiquity-os-marketplace/daemon-planner@feat/planner"
}
