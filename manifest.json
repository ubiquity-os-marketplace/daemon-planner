{
  "name": "@ubiquity-os/daemon-planner",
  "description": "Automated sprint planner that assigns GitHub issues based on contributor capacity.",
  "ubiquity:listeners": ["issues.opened", "issues.reopened"],
  "configuration": {
    "default": {},
    "type": "object",
    "properties": {
      "organizations": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": ["ubiquity", "ubiquity-os", "ubiquity-os-marketplace"]
      },
      "dailyCapacityHours": {
        "type": "number",
        "default": 6
      },
      "planningHorizonDays": {
        "type": "number",
        "default": 5
      },
      "reviewBufferHours": {
        "type": "number",
        "default": 2
      },
      "defaultEstimateHours": {
        "type": "number",
        "default": 4
      }
    }
  },
  "homepage_url": "https://daemon-planner-feat-planne.deno.dev"
}
